const express = require('express');
const connectDB = require('./config/db');
const internRoutes = require('./routes/internRoutes');
const contactRoutes = require('./routes/contactRoutes');
const roleRoutes = require('./routes/roleRoutes');
const studentRoutes = require('./routes/studentRoutes');
const userRoutes = require('./routes/userRoutes');
const assignRoleRoutes = require('./routes/assignRoleRoutes');
const authRoutes = require('./routes/authRoutes');
const cors = require('cors');
require('dotenv').config();

const app = express();

// ðŸŒ Connect to MongoDB
connectDB();

// ðŸ” CORS Configuration
const allowedOrigins = ['https://ems.shiwansh.com','https://www.shiwansh.com'];
app.use(
  cors({
    origin: function (origin, callback) {
      if (!origin || allowedOrigins.includes(origin)) {
        callback(null, true);
      } else {
        callback(new Error('Not allowed by CORS'));
      }
    },
    credentials: true,
  })
);

// ðŸ“¦ Body parser
app.use(express.json());

// ðŸš€ API Routes
app.use('/api/auths', authRoutes);
app.use('/api/students', studentRoutes);
app.use('/api/users', userRoutes);
app.use('/api/roles', roleRoutes);
app.use('/api/interns', internRoutes);
app.use('/api/contacts', contactRoutes);
app.use('/api/assignroles', assignRoleRoutes);

// ðŸ”š Express v5-friendly fallback route
app.all('/{*any}', (req, res) => {
  res.status(404).json({ error: `Can't find ${req.originalUrl} on this server.` });
});

// ðŸ’¥ Global Error Handler
app.use((err, req, res, next) => {
  console.error('ðŸ”¥ Internal error:', err.message);
  res.status(err.status || 500).json({ error: err.message || 'Internal Server Error' });
});

// ðŸŽ§ Start the server
const PORT = process.env.PORT || 4000;
app.listen(PORT, () => console.log(`Server running on port ${PORT}`));
